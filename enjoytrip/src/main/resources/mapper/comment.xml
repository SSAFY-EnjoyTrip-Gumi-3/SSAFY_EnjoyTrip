<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.trip.model.dao.CommentDao">

    <!-- 댓글 조회용 ResultMap -->
    <resultMap id="commentResponseMap" type="commentResponse">
        <id property="commentNo" column="comment_id" />
        <result property="postId" column="post_id" />
        <result property="writer" column="user_id" />
        <result property="content" column="content" />
        <result property="parentId" column="parent_id" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <!-- 특정 게시글의 댓글 목록 조회 -->
    <select id="getCommentsByPostId" resultMap="commentResponseMap">
        SELECT comment_id, post_id, user_id, content, parent_id, created_at, updated_at
        FROM comments
        WHERE post_id = #{postId}
        ORDER BY created_at ASC
    </select>

</mapper>
