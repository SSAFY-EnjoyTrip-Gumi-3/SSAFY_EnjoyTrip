<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.trip.model.dao.CommentDao">

    <!-- 댓글 조회용 ResultMap -->
    <resultMap id="commentResponseMap" type="com.ssafy.trip.model.dto.CommentResponse">
        <id property="commentNo" column="comment_no"/>
        <result property="postNo" column="post_no"/>
        <result property="userNo" column="user_no"/>
        <result property="content" column="content"/>
        <result property="parentNo" column="parent_no"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="isDeleted" column="is_deleted"/>
    </resultMap>

    <!-- 특정 게시글의 댓글 목록 조회 -->
    <select id="getCommentsByPostNo" resultMap="commentResponseMap">
        SELECT * FROM comments
        WHERE post_no = #{postNo}
        AND is_deleted = FALSE
        ORDER BY created_at ASC
    </select>

    <!-- 특정 댓글 조회 -->
    <select id="getCommentByCommentNo" resultMap="commentResponseMap">
        SELECT * FROM comments
        WHERE comment_no = #{commentNo}
    </select>

    <!-- 댓글 등록 -->
    <insert id="insertComment">
        INSERT INTO comments (post_no, user_no, content, parent_no, created_at, updated_at, is_deleted)
        VALUES (#{postNo}, #{userNo}, #{content}, #{parentNo}, NOW(), NOW(), FALSE)
    </insert>

    <!-- 댓글 수정 -->
    <update id="updateComment">
    	UPDATE comments
    	SET
        	updated_at = NOW(),
        	content = #{content},
        	parent_no = #{parentNo}
    	WHERE comment_no = #{commentNo}
    	AND is_deleted = FALSE
	</update>


    <!-- 댓글 논리 삭제 -->
    <update id="deleteComment">
        UPDATE comments
        SET is_deleted = TRUE,
            updated_at = NOW()
        WHERE comment_no = #{commentNo}
    </update>

</mapper>
